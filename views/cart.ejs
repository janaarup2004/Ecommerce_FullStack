<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body>
    <%- include('./partials/header') %>
    <div class="w-full min-h-screen flex flex-col md:flex-row items-start px-4 md:px-20 py-10 gap-10">
        <div class="w-full md:w-[40%] rounded-md overflow-hidden">
            <h2 class="text-2xl font-bold mb-6">Your Cart</h2>
            <% if(cartProducts.length === 0){ %>
                <div class="text-gray-500">Your cart is empty.</div>
            <% } %>
            <% cartProducts.forEach(function(product){ %>
            <div class="mb-8 bg-white rounded-lg shadow p-4 flex flex-col">
                <div class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>] mb-4">
                    <% if (product.image) { %>
                        <img class="h-[10rem]" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
                    <% } else { %>
                        <div class="h-[10rem] w-full flex items-center justify-center text-gray-400 bg-gray-100">No Image</div>
                    <% } %>
                </div>
                <div class="flex justify-between items-center">
                    <div>
                        <h3 class="text-xl font-semibold"><%= product.name %></h3>
                        <% if (product.discount && product.discount > 0) { %>
                            <div class="flex items-center gap-2">
                                <span class="line-through text-gray-400">₹ <%= product.price %></span>
                                <span class="font-bold text-green-600">₹ <%= product.price - product.discount %></span>
                                <span class="ml-2 text-xs text-red-500">Save ₹<%= product.discount %></span>
                            </div>
                        <% } else { %>
                            <span class="font-bold">₹ <%= product.price %></span>
                        <% } %>
                    </div>
                    <div class="flex items-center gap-2">
                        <button class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-100 text-blue-600 text-xl font-bold border border-blue-300 hover:bg-blue-200 transition">-</button>
                        <span class="px-3 py-1 rounded bg-gray-100 border border-gray-300 text-lg">1</span>
                        <button class="w-8 h-8 flex items-center justify-center rounded-full bg-blue-100 text-blue-600 text-xl font-bold border border-blue-300 hover:bg-blue-200 transition">+</button>
                        <form action="/removefromcart/<%= product._id %>" method="post" class="inline">
                            <button type="submit" class="ml-2 w-8 h-8 flex items-center justify-center rounded-full bg-red-100 text-red-600 text-xl font-bold border border-red-300 hover:bg-red-200 transition" title="Remove">
                                &times; 
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        <div class="w-full md:w-[60%]">
            <h3 class="text-xl font-bold mb-4">Price Breakdown</h3>
            <div class="px-4 md:px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= cartProducts.reduce((sum, p) => sum + (p.price || 0), 0) %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= cartProducts.reduce((sum, p) => sum + (p.discount || 0), 0) %></h4>
                </div>
                <!-- Platform Fee removed -->
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>₹ 40</h4>
                </div>
                
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <% 
                const totalMRP = cartProducts.reduce((sum, p) => sum + (p.price || 0), 0);
                const totalDiscount = cartProducts.reduce((sum, p) => sum + (p.discount || 0), 0);
                const shippingFee = 40;
                const totalAmount = cartProducts.reduce((sum, p) => sum + ((p.price || 0) - (p.discount || 0)), 0) + shippingFee;
            %>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= totalAmount %></h3>
            </div>
            <form action="/placeorder/<%= user && user._id ? user._id : '' %>" method="get" class="mt-8 flex justify-end">
                <button type="submit" class="px-8 py-3 bg-blue-600 text-white font-semibold rounded-full hover:bg-blue-700 transition text-lg shadow">Place Order</button>
            </form>
        </div>
    </div>
    <%- include('./partials/footer') %>
</body>
</html>